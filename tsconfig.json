{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es5",
    "lib": ["es6"],
    "outDir": "dist",
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
